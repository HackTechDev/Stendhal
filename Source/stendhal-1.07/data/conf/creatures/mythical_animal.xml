      <atk value="2557"/>
      <def value="154"/>
      <hp value="10000"/>
      <speed value="1.0"/>
      <size value="6,6"/>
    </attributes>
    <level value="350"/>
    <experience value="430000"/>
    <respawn value="120000"/>
    <corpse name="enormous_humanoid" width="6" height="6"/>
    <drops>
      <item value="money" quantity="[2000,20000]" probability="100.0"/>
      <item value="mega potion" quantity="[2,4]" probability="60.0"/>
